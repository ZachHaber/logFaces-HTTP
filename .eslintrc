{
  "root": true,
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "comma-dangle": 0,
    "indent": 2,
    "object-shorthand": 0,
    "func-names": 0,
    "no-use-before-define": ["warn"],
    "no-param-reassign": 0,
    "strict": 0,
    "import/no-extraneous-dependencies": 1,
    "prefer-spread": 0,
    "prefer-rest-params": 0,
    "prefer-destructuring": 0
  },
  "parserOptions": {
    "ecmaVersion": 11
  },
  "overrides": [
    {
      "files": ["test/**"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"]
    }
  ]
}
